{
  "manifest_version": 3,
  "name": "Brave Capture - CLM Position Tracker",
  "version": "1.1.0",
  "description": "Track Concentrated Liquidity Market Maker (CLM) positions across 7 DeFi protocols with AI-powered validation and historical comparison",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "downloads"
  ],
  
  "host_permissions": [
    "https://www.orca.so/*",
    "https://raydium.io/*",
    "https://aerodrome.finance/*",
    "https://app.cetus.zone/*",
    "https://hyperion.xyz/*",
    "https://app.beefy.com/*",
    "https://pancakeswap.finance/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.orca.so/*",
        "https://raydium.io/*",
        "https://aerodrome.finance/*",
        "https://app.cetus.zone/*",
        "https://hyperion.xyz/*",
        "https://app.beefy.com/*",
        "https://pancakeswap.finance/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}